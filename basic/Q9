const today = new Date(); // Get today's date.
const christmas = new Date(today.getFullYear(), 11, 25); // Create a date for December 25 of this year.

if (today > christmas) {
  christmas.setFullYear(christmas.getFullYear() + 1); // If today is past Christmas, use next year's Christmas.
}

const oneDay = 1000 * 60 * 60 * 24; // Milliseconds in a day.
const diff = Math.ceil((christmas - today) / oneDay); // Difference in days.
console.log(`${diff} day(s) left until Christmas!`); // Print days left.
